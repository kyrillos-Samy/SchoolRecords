@page
@model SchoolRecordsWeb.Pages.Student.CoursesModel
@{
    ViewData["Title"] = "Student Courses";
}
<h1>Student Courses</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @{
                int i = 0;
            }
            @for (; i < Model.Student.StudentClasses.Count - 1; i++)
            {
                <div class="form-group">
                @Html.DisplayFor(model => model.Student.StudentClasses[i].Class.Course.Name)
                </div>
            }
            @Html.HiddenFor(Model => Model.Student.Id)
            <select asp-for="@Model.Student.StudentClasses[i].Class.CourseId" class="form-control"
                    asp-items="@Model.CoursesSL">
                <option value="">-- Select Course --</option>
            </select>
            <div class="form-group">
                <input type="submit" value="Enrol" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
